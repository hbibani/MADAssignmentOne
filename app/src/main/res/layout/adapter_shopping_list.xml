<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/image_selection_box"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="0dp">

        <TextView
            android:id="@+id/id_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image_des"
            android:fontFamily="@font/poppinsbold"
            android:text="ID:"
            android:textColor="@color/green"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/shopid_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_des"
            android:layout_toRightOf="@id/image_des"
            android:fontFamily="@font/poppinsbold"
            android:text="ShopID:"
            android:textColor="@color/green"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/shopname_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopid_des"
            android:layout_toRightOf="@id/image_des"
            android:fontFamily="@font/poppinsbold"
            android:text="Name:"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/location_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopname_des"
            android:layout_toRightOf="@id/image_des"
            android:fontFamily="@font/poppinsbold"
            android:text="Location:"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/date_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_des"
            android:layout_toRightOf="@id/image_des"
            android:fontFamily="@font/poppinsbold"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/image_des"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_shop_adapter"></ImageView>
    </RelativeLayout>

    <Button
        android:id="@+id/view_button_des"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/image_selection_box"
        android:background="@color/green"
        android:text="View" />


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/view_button_des"
        android:text="Delete" />


    <Button
        android:id="@+id/map_button_des"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/view_button_des"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:layout_toRightOf="@+id/image_selection_box"
        android:background="@color/colorPrimary"
        android:text="Map" />


    <Button
        android:id="@+id/add_button_des"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/checkBox"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:layout_toRightOf="@+id/map_button_des"
        android:background="@color/purple_200"
        android:text="ADD" />
</RelativeLayout>